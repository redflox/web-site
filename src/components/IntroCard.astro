---
import { Image } from "astro:assets";
import LocalMe1Image from "../icons/me1.webp";
import LocalJavaImage from "../icons/java.svg";
import LocalPythonImage from "../icons/python.svg";
import LocalLinuxImage from "../icons/linux.svg";
import LocalJavascriptImage from "../icons/javascript.svg";
